@attribute [Authorize]
@using OrderDeliverySystem.Client.Shared
@using OrderDeliverySystem.Client.Pages
@using OrderDeliverySystem.Components

@using Microsoft.AspNetCore.Authorization;
@using OrderDeliverySystem.Client.Infrastructure.Services.Authentication
<MudNavMenu Class="mud-width-full">
    <div class="d-flex justify-content-center">
        <MudImage Src="images/food.png" Width="120" Height="80" Alt="Swedish Farm House" Href="/" Class="rounded-lg m-4" />
    </div>
    <div class="d-flex justify-content-center">
        <MudText Typo="Typo.h6" Class="px-4">My Application</MudText>
    </div>
    <div class="d-flex justify-content-center">
        <MudText Typo="Typo.body2" Class="px-4 mud-text-secondary">Secondary Text</MudText>
    </div>

    <MudDivider Class="my-2" />
    @if (_role == "Admin")
    {
        <MudNavLink Href="/user-management" Icon="@Icons.Material.Filled.Dashboard">User Management</MudNavLink>
        <MudNavLink Href="/reviewlist" Icon="@Icons.Material.Filled.Dashboard">Review  Management</MudNavLink>
        <MudNavLink Href="/password" Icon="@Icons.Material.Filled.Receipt">Password Reset</MudNavLink>
    }
    else
    {
        @if (_role == "Merchant")
        {
            <MudNavLink Href="/profile" Icon="@Icons.Material.Filled.Dashboard">Profile Management</MudNavLink>
            <MudNavLink Href="/productlist" Icon="@Icons.Material.Filled.Dashboard">Product Management</MudNavLink>
            <MudNavLink Href="/orderlist" Icon="@Icons.Material.Filled.Dashboard">Order Management</MudNavLink>
            <MudNavLink Href="/reviewlist" Icon="@Icons.Material.Filled.Dashboard">Review Management</MudNavLink>
            <MudNavLink Href="/password" Icon="@Icons.Material.Filled.Receipt">Password Reset</MudNavLink>
        }
        else if (_role == "Merchant")
        {
            <MudNavLink Href="/profile" Icon="@Icons.Material.Filled.Dashboard">Profile Management</MudNavLink>
            <MudNavLink Href="/recent-order" Icon="@Icons.Material.Filled.Dashboard">Order</MudNavLink>
            <MudNavLink Href="/orderlist" Icon="@Icons.Material.Filled.Dashboard">Histiry Order</MudNavLink>
            <MudNavLink Href="/password" Icon="@Icons.Material.Filled.Receipt">Password Reset</MudNavLink>
        }
        else
        {
              <div>You can not enter this page</div>
    
        }
    }
    
</MudNavMenu>

